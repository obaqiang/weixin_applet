.list_info {
  background-color: #fff;
  padding: 20rpx;
  border-bottom: 1rpx solid #ddd;
}

.info_img {
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}

.info_name {
  font-size: 30rpx;
}

.info_content {
  font-size: 30rpx;
  color: #aaa;
  padding-left: 20rpx;
}

.info_about {
  font-size: 30rpx;
  line-height: 40rpx;
  color: #aaa;
  padding: 10rpx 50rpx;
}


.recommend_scroll_x_box {
  height: 130rpx;
  white-space: nowrap;
  display: flex;
  padding: 10rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.recommend_hot_box {
  width: 210rpx;
  height: 245rpx;
  margin-right: 24rpx;
  display: inline-block;
  position: relative;
}

.recommend_hot_image {
  width: 200rpx;
  height: 130rpx;
}