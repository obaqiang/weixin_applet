/* pages/index_red_packets/index_red_packets.wxss */

page {
  background: #fff;
}

.pac_head {
  text-align: center;
  line-height: 80rpx;
}

.head_one {
  color: #666;
  font-size: 25rpx;
}

.head_two {
  color: #cb2920;
  font-size: 30rpx;
  display: inline-block;
  padding: 20rpx;
}

.head_thr {
  color: #666;
  font-size: 25rpx;
}

.recommend_scroll_x_box {
  height: 80rpx;
  white-space: nowrap;
  display: flex;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.recommend_hot_box {
  width: 100rpx;
  height: 200rpx;
  margin-right: 24rpx;
  display: inline-block;
  position: relative;
  text-align: center;
}

.tex_1 {
  font-size: 30rpx;
  background: #efeff4;
  display: inline-block;
  width: 100rpx;
  padding: 10rpx;
  color: #666;
}

.tex_on {
  font-size: 30rpx;
  background: #cb2920;
  display: inline-block;
  width: 100rpx;
  padding: 10rpx;
  color: #fff;
}

.bill_charge {
  overflow: hidden;
}

.charge_left {
  float: left;
  font-size: 25rpx;
  color: #666;
  margin-left: 20rpx;
}

.charge_num {
  color: #cb2920;
  display: inline-block;
  padding: 20rpx;
  font-size: 30rpx;
}

.charge_right {
  float: right;
  font-size: 25rpx;
  color: #666;
  margin-right: 20rpx;
}

.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 80rpx;
  align-items: center;
  border-bottom: 1rpx solid #ddd;
}

.td {
  width: 40%;
  justify-content: center;
  text-align: center;
  font-size: 30rpx;
  color: #666;
}

.th {
  width: 40%;
  justify-content: center;
  background: #efeff4;
  color: #666;
  display: flex;
  height: 80rpx;
  align-items: center;
  font-size: 30rpx;
}
